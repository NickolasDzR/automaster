include ../../../components/hamburger/hamburger
include ../../../components/main-nav/main-nav
include ../../../components/bg-slider/bg-slider
include ../../../components/title-slider/title-slider
include ../../../components/pagination/pagination
include ../../../components/sidebar/sidebar
include ../../../components/breadcrumbs/breadcrumbs

mixin header()
    header.header
        +hamburger
        +sidebar
        .header__content
            +main-nav({
                class: 'main-nav_theme_blue header__main-nav',
                containerClass: 'header__container'
            })
            - const breadcrumbsText = ['Главная', 'Каталог товаров', 'Оборудование для заправки кондиционеров']
            - const activeIndex = 1;
            +breadcrumbs(
                breadcrumbsText,
                activeIndex
            )